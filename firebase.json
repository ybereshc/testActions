{
  "functions": {
	"source": "firebase-functions",
	"runtime": "nodejs18"
  },
  "hosting": [
    {
      "public": "build",
      "target": "dev",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "api"
        }
      ]
    },
    {
      "public": "build",
      "target": "prod",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "function": "api"
        }
      ]
    }
  ]
}